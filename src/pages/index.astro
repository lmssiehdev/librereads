---
export const prerender = true;
import SearchInput from "../components/search-input.astro";
import MainLayout from "../layouts/Layout.astro";
---

<MainLayout>
  <main>
    <h2 class="text-center fluid-2xl sm:fluid-4xl my-12 leading-[1.2]">
      Goodreads, reimagined.
      <br />
      Private, minimal, simple.
    </h2>
    <div class="my-12 max-w-md mx-auto">
      <SearchInput
        redirectUrl="/search/book"
        placeholder="The name of the wind..."
      />
    </div>
  </main>
</MainLayout>
