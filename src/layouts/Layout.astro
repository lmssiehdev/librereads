---
import type { Metadata } from "../types";

interface Props {
	metadata?: Metadata;
}

const { metadata = { title: "LibreReads", description: "" } } = Astro.props;
const { title, description } = metadata;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%2210 0 100 100%22><text y=%22.90em%22 font-size=%2290%22>üìñ</text></svg>"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body
    class="flex flex-col min-h-screen max-w-screen-md !mx-auto px-2 bg-[#f6f0e9] font-pockoto"
  >
    <div class="flex-1">
      <div class="py-4">
        <nav class="flex justify-between items-center">
          <h1 class="text-xl font-bold">
            <a href="/">
              LibreReads <span class="text-xs opacity-70">[Beta]</span>
            </a>
          </h1>
          <ul class="flex gap-3 items-center">
            <li>
              <a class="hover:underline underline-offset-4" href="/search/book/"
                >Search</a
              >
            </li>
          </ul>
        </nav>
      </div>
      <slot />
    </div>
    <footer class="mt-10 py-2 border-t-2 border-black">
      <div class="flex justify-between">
        <span>Built with ‚ù§Ô∏è</span>
        <a
          class="hover:underline underline-offset-4"
          href="https://github.com/lmssiehdev/librereads-astro">source code</a
        >
      </div>
    </footer>
  </body>
</html>

<style>
  :root {
    --pockota-font: "Pockota", sans-serif;
  }
  @font-face {
    font-family: "Pockota";
    src: url("/fonts/Pockota.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    font-family: "Pockota", sans-serif;
  }
</style>
